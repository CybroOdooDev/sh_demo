<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="action_woo_category_menu" model="ir.actions.act_window">
            <field name="name">Category</field>
            <field name="res_model">woocommerce.category</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('woo_id', '!=', False)]</field>
            <field name="context">{'create': True, 'edit': True, 'delete': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    Woo-commerce Categories.
                </p>
            </field>
        </record>

        <record id="woo_commerce_category_tree_view" model="ir.ui.view">
            <field name="name">woo.commerce.category.tree</field>
            <field name="model">woocommerce.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="woo_commerce_category_form_view" model="ir.ui.view">
            <field name="name">woo.commerce.category.form</field>
            <field name="model">woocommerce.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="woo_id"/>
                            <field name="instance_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <menuitem id="product_attribute_submenu"
                  name="Woocommerce Categories"
                  action="action_woo_category_menu"
                  sequence="1"
                  parent="product_menu"/>

    </data>
</odoo>